{
  "name": "daily-sms-survey-system",
  "version": "1.0.0",
  "description": "Daily SMS Survey & Feedback System - A prototype for tracking user joy, achievement, and meaningfulness",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server.js",
    "db:init": "node scripts/init-db.js",
    "db:seed": "node scripts/seed-db.js",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "sms",
    "survey",
    "feedback",
    "twilio",
    "react",
    "nodejs",
    "prototype"
  ],
  "author": "LifeMatrix Prototype",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6",
    "twilio": "^4.19.0",
    "node-cron": "^3.0.3",
    "moment-timezone": "^0.5.43",
    "body-parser": "^1.20.2",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
